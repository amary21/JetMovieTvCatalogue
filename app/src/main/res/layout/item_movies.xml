<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginStart="13dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="13dp"
    android:layout_marginBottom="8dp"
    card_view:cardCornerRadius="5dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img_movie_bg"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginBottom="64dp"
            android:background="@color/colorPrimary"
            android:scaleType="centerCrop"
            android:tint="#6F000000"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintHorizontal_bias="0.0"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toTopOf="parent"
            card_view:layout_constraintVertical_bias="0.0"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/img_movie_poster"
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="24dp"
            android:background="@android:color/white"
            android:scaleType="fitXY"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintStart_toStartOf="parent"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/txt_movie_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="16dp"
            android:layout_toEndOf="@id/img_movie_poster"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@string/title"
            android:textColor="@android:color/white"
            android:textSize="21sp"
            android:textStyle="bold"
            card_view:layout_constraintBottom_toBottomOf="@+id/img_movie_bg"
            card_view:layout_constraintEnd_toEndOf="@+id/img_movie_bg"
            card_view:layout_constraintStart_toEndOf="@+id/img_movie_poster" />

        <TextView
            android:id="@+id/txt_movie_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_movie_title"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_toEndOf="@id/img_movie_poster"
            android:background="@drawable/ic_rounded"
            android:ellipsize="end"
            android:maxLines="1"
            android:padding="7dp"
            android:text="@string/release_date"
            android:textColor="@android:color/white"
            card_view:layout_constraintBottom_toBottomOf="@+id/txt_movie_rate"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintHorizontal_bias="0.0"
            card_view:layout_constraintStart_toEndOf="@+id/txt_movie_rate"
            card_view:layout_constraintTop_toTopOf="@+id/txt_movie_rate"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/txt_movie_rate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_movie_date"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="24dp"
            android:layout_toEndOf="@id/img_movie_poster"
            android:background="@drawable/ic_rounded"
            android:drawableStart="@drawable/ic_star_yellow"
            android:drawablePadding="2dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:padding="5dp"
            android:text="@string/rate"
            android:textColor="@android:color/white"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintStart_toEndOf="@+id/img_movie_poster"
            tools:ignore="ContentDescription"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
